<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pers.seiryo.sms.dao.TeacherMapper">
    <select id="login" parameterType="loginform" resultType="pers.seiryo.sms.bean.Teacher">
        SELECT id,
        tno,
        name,
        gender,
        password,
        email,
        telephone,
        address,
        clazz_name
        FROM tb_teacher
        WHERE name = #{username}
        AND password = #{password}
    </select>

</mapper>